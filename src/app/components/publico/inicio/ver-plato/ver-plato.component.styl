.main-wrapper
    width 100vw
    min-height 100vh
    position absolute
    top 0
    left 0
    background black
    .wrapper
        .img-container
            position absolute
            width 100%
            height 35vh
            background-size: cover
            z-index 0
        .gradient-container
            background linear-gradient(180deg,transparent, rgba(0,0,0,.5), black)
            width 100%
            height 35vh
            position absolute
            z-index 1
        .header-container
            position absolute
            width 100%
            top 30vh
            z-index 3
            display flex
            flex-flow column
            align-items: center
            justify-content: center
            h1
                font-family 'Maven Pro'
                color white
                text-transform: uppercase
                font-size 1.7rem
                background #4b4e6d
                padding 10px 20px
                border-radius 8px
                box-shadow 0px 5px 25px rgba(0,0,0,.5)
        .content-container
            position absolute
            width 90vw
            top 32.5vh
            margin-left: 5vw
            padding 3rem 2rem
            z-index 2
            background white
            border-radius 8px
            .precio
                font-size 2.5rem
                font-family 'Maven Pro'
                color #333
            .cantidad
                font-size 1rem
                padding .5rem
.form-inputs
    display: flex
    flex-flow: row
    align-items: center
    justify-content: space-between
    input[type=number]
        max-width 130px
        font-size 1.7rem
        padding .5rem
        text-align: right
        border 1px solid #DDD
        border-radius 8px