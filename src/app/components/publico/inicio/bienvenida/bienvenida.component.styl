.content-center
    align-items: center
    background: white
    display: flex
    flex-flow: column
    height: 100%
    justify-content: center
    overflow: hidden
    width: 100%
    p
        text-align: center
        padding: 10px
.titulo-resto
    font-size: 20px
    font-weight: bold
    text-transform: uppercase
    font-family: 'Anton'
.sub-title
    font-family: 'Designed by Kimberly Geswein'
    font-size: 50px
    text-transform: uppercase
.frmControl
    box-shadow: 0px 5px 25px rgba(0,0,0,.1)
    font-size: 30px
    max-width 120px
    padding: 15px 15px 15px 30px
    text-align: center
form 
    align-items: center
    display: flex
    flex-flow: column 
    justify-content: center
    width 100px
button
    -moz-appearance: none
    -webkit-appearance: none    
    appearance none
    background-color: #4b4e6d;
    border none
    border-radius: 5px
    color: white
    cursor pointer
    margin-top: 20px
    padding: 20px 40px
    text-transform: uppercase