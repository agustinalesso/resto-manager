.contenedor-titulo
    display: flex
    flex-flow: column
    align-items: center
    justify-content: center
    margin-bottom: 2rem
    h1
        font-family 'Maven Pro'
        color #222
        font-weight: bolder

.main-card-container
    width 80vw
    margin 0 auto
    cursor pointer

.contendor-columnas-carta
    display flex
    flex-flow row
    align-items: center
    justify-content: center
    position relative
    overflow hidden
    min-height 200px
    border-radius 8px
    box-shadow 0px 15px 35px rgba(0,0,0,.2)
    margin-bottom 20px
    .contenedor-imagen
        position absolute
        width 100%
        height 200px
        background-size: cover
        z-index 0
    .contenedor-texto
        position absolute
        bottom 0
        left 0
        padding 0px 20px
        background rgba(0,0,0,.7)
        width 100%
        min-height 200px
        color white !important
        display flex
        flex-flow column
        align-items: flex-start
        justify-content: center
        .titulo
            font-size 1.4rem
            text-transform uppercase
            font-family: 'Maven Pro'
        .descripcion
            font-size 1rem
        .info
            font-size .8rem
            color white
            position absolute
            bottom 0px
            right 20px
            background-color steelblue
            padding 2px 10px
            border-radius 15px